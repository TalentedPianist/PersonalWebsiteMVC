@{
}
@using PersonalWebsiteMVC.Data
@inject ApplicationDbContext db
@using System.Linq 

<div style="clear: both;"></div>
<div class="row">
     <div class="col-md-6 m-0 p-0 float-left">
          <h3>Latest Posts</h3>
          <ul>
               @{
                    var posts = db.Posts.OrderByDescending(i => i).Take(3);
                    foreach (var item in posts)
                    {
                         <li><a asp-action="Blog" asp-controller="Home" asp-route-q="@item.PostID">@item.PostTitle</a></li>
                        
                    }
               }
          </ul>
     </div>

     <div class="col-md-6 m-0 p-0 float-left">
          <h3>Interesting Links</h3>

          <ul>
               <li><a href="https://www.amyscrypt.com" target="_blank">Amy's Crypt</a></li>
               <li><a href="https://www.ufoseekers.com" target="_blank">UFO Seekers</a></li>
              <li><a href="https://www.davidcastleton.net/london-underground-haunted-stations-ghosts-tube/">London Underground Ghosts</a></li>
          </ul>
     </div>
</div>


