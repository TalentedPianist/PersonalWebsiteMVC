@model Guestbook
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<h1 class="bg-info text-white">Update</h1>
<a asp-action="Index" class="btn btn-secondary">Back</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
     <div class="form-group form-row">
          <label asp-for="GuestbookComment">Comment:</label>
          <textarea asp-for="GuestbookComment" rows="10" cols="13" id="ckeditor1"></textarea>
     </div>
     <div class="form-group form-row">
          <label asp-for="GuestbookUser">Name:</label>
          <input asp-for="GuestbookUser" />
     </div>
     <div class="form-group form-row">
          <label asp-for="GuestbookUserEmail">Email:</label>
          <input asp-for="GuestbookUserEmail" />
     </div>
     <div class="form-group form-row">
          <label asp-for="GuestbookUserWebsite">Website:</label>
          <input asp-for="GuestbookUserWebsite" />
     </div>
     <div class="form-group form-row">
          <label asp-for="GuestbookApproved">Approved:</label>
          <select asp-for="GuestbookApproved">
              <option value="@Model.GuestbookApproved" selected="selected">@Model.GuestbookApproved</option>
              <option value="Yes">Yes</option>
              <option value="No">No</option>
          </select>
     </div>
     <button type="submit" class="btn btn-primary">Save</button>
</form>

