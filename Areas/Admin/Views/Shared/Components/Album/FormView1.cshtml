@model PersonalWebsiteMVC.Models.Photos

<form method="post">
	<div class="form-group">
          <label asp-for="PhotoName"></label>
          <input asp-for="PhotoName" />
     </div>
     <div class="form-group">
          <label asp-for="PhotoLocation"></label>
          <input asp-for="PhotoLocation" id="searchTextField" />
     </div>
     <div class="form-group">
          <label asp-for="PhotoDescription"></label>
          <textarea asp-for="PhotoDescription" rows="5" cols="30"></textarea>
     </div>
     <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=places&key=AIzaSyBLgq2BcCrbNfFlvviKbpOvAikzKMlPYp4"></script>
<script>
     function initialize() {
          var input = document.getElementById("searchTextField");
          new google.maps.places.Autocomplete(input);
     }

     google.maps.event.addDomListener(window, "load", initialize);
</script>

<style>
     .pac-container { z-index: 1051 !important; }
</style>