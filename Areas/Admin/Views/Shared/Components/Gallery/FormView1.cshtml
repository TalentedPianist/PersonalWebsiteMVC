@model PersonalWebsiteMVC.Models.Gallery

<form method="post" asp-controller="Gallery" asp-action="AddGalleryToDb()">
     <div class="form-group">
          <label asp-for="GalleryName"></label>
          <input asp-for="GalleryName" size="50" />
     </div>
     <div class="form-group">
          <label asp-for="GalleryLocation"></label>
          <input asp-for="GalleryLocation" id="searchTextField" size="50" />
     </div>
     <div class="form-group">
          <label asp-for="GalleryDescription"></label>
          <textarea asp-for="GalleryDescription" rows="5" cols="30"></textarea>
     </div>
     <input type="hidden" asp-for="GalleryRemoteID" />
     <button type="submit" class="btn btn-primary">Add Gallery</button>
</form>


<script>
     function initialize() {
          var input = document.getElementById("searchTextField");
          new google.maps.places.Autocomplete(input);
     }

     google.maps.event.addDomListener(window, "load", initialize);
</script>

<style>
     .pac-container { z-index: 1051 !important; }
</style>
