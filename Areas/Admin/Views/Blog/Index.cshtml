@model IEnumerable<Posts>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<h1 class="bg-info text-white">Blog</h1>
<a asp-action="Create" class="btn btn-secondary">Create</a>

<table class="table text-center">
     <thead class="font-weight-bold"><td>ID</td><td>Title</td><td>User</td><td>Update</td><td>Details</td><td>Delete</td></thead>
     @foreach (var item in Model)
     {
          <tr>
          <td>@item.PostID</td>
          <td>@item.PostTitle</td>
          <td>@item.PostAuthor</td>
          <td><a asp-action="Update" class="btn btn-primary" asp-route-id="@item.PostID">Update</a></td>
          <td><a asp-action="Details" class="btn btn-primary" asp-route-id="@item.PostID">Details</a></td>
          <td><a asp-action="Delete" class="btn btn-primary" asp-route-id="@item.PostID">Delete</a></td>
          </tr>
     }
</table>

